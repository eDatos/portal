<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	
	<comment>Stat4You Crawler Configuration</comment>

	<entry key="stat4you.crawler.droids.maxThreads">5</entry>
	<entry key="stat4you.crawler.droids.queue.maxSize">-1</entry>
	<entry key="stat4you.crawler.droids.protocol.http.force">true</entry>

	<entry key="stat4you.crawler.droids.handler.save.dir">/data/stat4you/crawler/px/test</entry>
	<entry key="stat4you.crawler.droids.delay.request">100</entry>
	
	<!-- Providers Info -->
	<entry key="stat4you.crawler.droids.provider.istac.url">stat4you:dsd:provider:ISTAC</entry>
    <!-- Fire at 1:00am on every Sunday of every month -->
    <entry key="stat4you.crawler.droids.provider.istac.cronexp">0 16 14 ? * SUN 2099</entry>
	
	<entry key="stat4you.crawler.droids.provider.ibestat.url">stat4you:dsd:provider:IBESTAT</entry>
    <!-- Fire at 1:00am on every Monday of every month -->
    <entry key="stat4you.crawler.droids.provider.ibestat.cronexp">0 0 1 ? * MON 2099</entry>
	
	<entry key="stat4you.crawler.droids.provider.eustat.url">stat4you:dsd:provider:EUSTAT</entry>
    <!-- Fire at 1:00am on every Tuesday of every month -->
    <entry key="stat4you.crawler.droids.provider.eustat.cronexp">0 0 1 ? * TUE 2099</entry>

	<entry key="stat4you.crawler.droids.provider.ine.url">stat4you:dsd:provider:INE</entry>
    <!-- Fire at 1:00am on every Wednesday of every month -->
    <entry key="stat4you.crawler.droids.provider.ine.cronexp">0 0 1 ? * WED 2099</entry>
	
</properties>

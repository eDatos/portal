<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- Creates a EntityManagerFactory for use with a JPA provider -->
    <bean id="entityManagerFactoryStatistics" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="Stat4YouStatisticsEntityManagerFactory"/>
        <property name="persistenceXmlLocation" value="classpath:META-INF/statistics-persistence.xml"/>
        <property name="dataSource" ref="dataSourceStatistics"/>
    </bean>

    <bean id="dataSourceStatistics" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName">
            <value>java:comp/env/jdbc/Stat4YouStatisticsDS</value>
        </property>
    </bean>

    <bean id="txManagerStatistics" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactoryStatistics"/>
        <property name="dataSource" ref="dataSourceStatistics"/>
    </bean>

    <bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>
</beans>

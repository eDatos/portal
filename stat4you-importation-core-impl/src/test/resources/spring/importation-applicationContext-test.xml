<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"    
        xmlns:context="http://www.springframework.org/schema/context" 
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        					http://www.springframework.org/schema/context   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <!-- activates annotation-based bean configuration -->  
	<context:annotation-config/>  

	<!-- scans for @Components, @Repositories, @Services, ... -->  
	<context:component-scan base-package="com.stat4you.importation">
		<context:exclude-filter type="regex" expression=".*web.*" />
	</context:component-scan>

	<!-- Spring configuration imports -->    
    <import resource="classpath:/spring/include/importation-interceptor.xml" />
    <import resource="classpath:spring/transformation-applicationContext.xml" />
    <import resource="classpath:spring/statistics-applicationContext.xml" />
    <import resource="classpath:spring/statistic-dataset-repository-applicationContext-mysql.xml" />
	
</beans>